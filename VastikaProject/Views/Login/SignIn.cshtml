
@{
    Layout = null;
}

@model LoginModel
@*
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/Vastika_Project.styles.css" asp-append-version="true" />

<link href="~/css/VastikaTest.css" rel="stylesheet" asp-append-version="true" />
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

@*
	Item refers to col
	flex-row means the item will flow horizontally(left-right)
	flex-columns means vertically (top-down)
*@
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>Musicify - login or signup</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> 
	<link rel="stylesheet" href="~/Vastika_Project.styles.css" asp-append-version="true" />
	<link href="~/css/VastikaTest.css" rel="stylesheet" asp-append-version="true" />
</head>

<body>


	<div class="container d-flex justify-content-center align-items-center min-vh-100" >


	<div class="row border p-3 bg-white shadow box-area">


			<div class="col-md-6"></div>
			<form method="post" asp-action="SignIn">
				<div class="d-flex align-items-center mb-3 pb-1">
					<i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
					<span class="h1 fw-bold mb-0">Musicify</span>
				</div>

				<h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>

				<div class="form-outline mb-4">
					<input type="email" placeholder ="Email" asp-for="LoginUsername" id="form2Example17" class="form-control form-control-lg" required />
					<label class="form-label" for="form2Example17"></label>
					<span asp-validation-for="LoginUsername" class="text-danger"></span>
				</div>

				<div class="form-outline mb-4">
					<input type="password" placeholder="Password" asp-for="LoginPassword" id="form2Example27" class="form-control form-control-lg" required/>
					<label class="form-label" for="form2Example27"></label>
					<span asp-validation-for="LoginPassword" class="text-danger"></span>
				</div>
				
				<div class="form-outline mb-4 d-flex justify-content-between align-items-center">
				<div class="remember-me">
					<div class="form-check">
						<input type ="checkbox" class="form-check-input" id="formCheck">
						<label for="formCheck"><small>Remember me</small></label>
						
					</div>
				</div>

				<div class="forgot-password">
					<small><a asp-action="Index" asp-controller="Customers">Forgot password?</a></small>
				</div>
				</div>
				

				<div class="pt-1 mb-4">
					<button class="btn btn-lg btn-primary w-100 fs-6" type="submit">Login</button>
				</div>

				<div class="mb-4">
				<button class="btn btn-lg btn-light w-100 fs-6"> <img src="~/img/Google-logo.png" style="width:20px" /> <small>sign in with google</small></button>
				</div>



				@*<p class="mb-5 pb-lg-2" style="color: #393f81;">
					Don't have an account? <a href="#" asp-action="SignUp" asp-controller="SignUp" data-bs-toggle=" modal" data-bs-target="#registerModal" style="color: #393f81;">Register here</a>
				</p>*@

				<p class="mb-5 pb-lg-2" style="color: #393f81;">
					Don't have an account? <a asp-action="CreateAccount" asp-controller="SignUp" style="color: #393f81;">Register here</a>
				</p>

				
				
				<a asp-action="Index" asp-controller="Products" class="small text-muted">Terms of use.</a>
				<a href="#!" class="small text-muted">Privacy policy</a>
			</form>
		</div>
		</div>
		</body>
		</html>

